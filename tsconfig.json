        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "es2018",
            "dom",
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": ".",
        "removeComments": true,
        "strict": true,
        "target": "es2018",
    },
    "exclude": [],
    "include": [
        "src/**/*.ts",
    ],
}
