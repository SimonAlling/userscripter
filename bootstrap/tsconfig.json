{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "esnext",
            "dom",
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "~src/*": [ "./src/*" ],
        },
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es6",
    },
    "include": [
        "./src/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts",
    ],
}
